{% extends 'base.html.twig' %}

{% block title %}PapyFactice - Liste des résultats{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; font: 18px sans-serif; }
    
    /* Police d'écriture : gras/italique */ 
    .font-italic { font-style: italic !important };
    .font-bold { font-weight: 700 !important };

    
</style>

<div class="example-wrapper">
    <h1 class="text-center">Liste des résultats ({{ establishments|length }})</h1>

    <p>Rechercher :</p>
    
    {{ form(form) }}

    <p>Trier :</p>
    <ul>
        <li>
            <a href="{{ path('app_establishment_ehpad')}}">EHPAD</a>
        </li>
        <li>
            <a href="{{ path('app_establishment_rss')}}">Résidence Services Seniors</a>
        </li>
    </ul>

    <ul>
        {% for establishment in establishments %}
            <li>
                <h2 class="font-bold">{{ establishment.name }}</h2>
                <p class="font-italic">{{ establishment.type }}</p>
                <p>📍 {{ establishment.city }} ({{ establishment.zip }})</p>
                <a href="{{ path('app_establishment_show', {'id': establishment.id})}}">🔗 Plus d'infos !</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
